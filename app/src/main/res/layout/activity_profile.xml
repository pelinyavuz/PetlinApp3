<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/home">

    <Button
        android:id="@+id/sahiplendirme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/kayip"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/dogg"
        android:text="SAHİPLENDİRME"
        android:textSize="13sp"

        android:textColor="#fff" />

    <Button
        android:id="@+id/kayip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/esbul"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="-79dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/wanted"
        android:text="KAYIP İLANLARI"
        android:textColor="#fff"
        android:textSize="13sp" />

    <Button
        android:id="@+id/esbul"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yardim"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="145dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/lo"
        android:text="EŞBUL"
        android:textColor="#fff"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sahiplendirme"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/loog" />

    <Button
        android:id="@+id/yardim"
        android:textSize="13sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="97dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ambulance"
        android:text="YARDIM"
        android:textColor="#fff" />

</RelativeLayout>